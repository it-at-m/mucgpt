# Assistant Service Configuration
# This file provides an example YAML configuration for the MUCGPT assistant service.
# You can use this instead of environment variables.
#
# Priority order (highest to lowest):
# 1. Environment variables (MUCGPT_ASSISTANT_*)
# 2. YAML configuration file (this file, when named config.yaml)
# 3. .env file
#
# Note: Because case_sensitive=False in settings, use UPPERCASE field names in YAML

# Database settings
DB_HOST: "postgres"
DB_PORT: 5432
DB_NAME: "postgres"
DB_USER: "admin"
DB_PASSWORD: "admin"

# Backend settings
UNAUTHORIZED_USER_REDIRECT_URL: ""
LOG_CONFIG: "src/logconf.yaml"

# SSO Settings (optional - can also be configured via environment variables with MUCGPT_SSO_ prefix)
# ROLE: "lhm-ab-mucgpt-user"

# Redis Settings (optional - can also be configured via environment variables with MUCGPT_REDIS_ prefix)
# HOST: "redis"
# PORT: 6379
# USERNAME: "default"
# PASSWORD: "password"

# LDAP Settings (optional - can also be configured via environment variables with MUCGPT_LDAP_ prefix)
